<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Plant</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- createPlant.ejs -->

    <!-- ... contenu de la vue ... -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <h1 class="mt-5">Create Plant</h1>

    <div id="error-message" class="alert alert-danger mt-3" style="display:none;"></div>

    <div class="mb-3">
        <label for="plantName" class="form-label">Plant Name:</label>
        <input type="text" class="form-control" id="plantName" name="plantName" required>
    </div>

    <button type="button" class="btn btn-primary" onclick="createPlant()">Create Plant</button>

    <script>
        async function createPlant() {
            const errorMessage = document.getElementById('error-message');
            const name = document.getElementById('plantName').value;

            try {
                const response = await fetch('/plants/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        name: name

                    })
                });

                const data = await response.json();

                if (response.ok) {
                    document.getElementById('plantName').value = '';

                    window.location.href = '/plants/my';
                } else {
                    errorMessage.textContent = data.message;
                    errorMessage.style.display = 'block';
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
    </script>
</body>

</html>